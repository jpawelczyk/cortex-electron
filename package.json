{
  "name": "cortex",
  "version": "0.1.0",
  "description": "Local-first personal OS for managing your work",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "electron-rebuild -f -w better-sqlite3 && vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "rebuild:node": "npm rebuild better-sqlite3",
    "test": "npm run rebuild:node && vitest run",
    "test:watch": "npm run rebuild:node && vitest",
    "test:coverage": "npm run rebuild:node && vitest run --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint . && tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "drizzle-orm": "^0.38.0",
    "uuid": "^11.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@playwright/test": "^1.50.0",
    "@testing-library/react": "^16.2.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.12.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/coverage-v8": "^3.0.0",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.30.0",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.0",
    "eslint": "^9.19.0",
    "postcss": "^8.5.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.1.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.0",
    "vitest": "^3.0.0"
  },
  "build": {
    "appId": "com.cortex.app",
    "productName": "Cortex",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.productivity"
    }
  }
}
