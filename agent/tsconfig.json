{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "..",
    "resolveJsonModule": true,
    "declaration": false
  },
  "include": ["*.ts", "../src/main/sync/schema.ts", "../src/shared/types.ts"],
  "exclude": ["node_modules", "dist"]
}
